{
  "compilerOptions": {
    "target": "ESNext",

    /* ‚ùó CHANGE THESE TWO LINES */
    "module": "CommonJS",
    "moduleResolution": "Node",

    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "isolatedModules": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/dev_only"]
}
